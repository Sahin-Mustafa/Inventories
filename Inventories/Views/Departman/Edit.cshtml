@using Inventories.Models.Departman;
@model EditModel

<div class="row">
    <div class="col-8 offset-2 ">
        <form method="post" class="mt-2 text-center">
            <h2 class="mb-4">Yeni Bölüm Ekle</h2>
            <div class="text-danger small mb-3" asp-validation-summary="ModelOnly"></div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control input-sm" asp-for="DepartmanName" />
                <label class="text-muted small">Bölüm Adı</label>
                <span class="text-danger small" asp-validation-for="DepartmanName"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control input-sm" asp-for="JobDescription" />
                <label class="text-muted small">Bölüm Detayı</label>
                <span class="text-danger small" asp-validation-for="JobDescription"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa-thin fa-arrow-right-to-arc"></i> Güncelle
            </button>
        </form>
    </div>
</div>