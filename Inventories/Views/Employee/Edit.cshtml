@using Inventories.Models.Employee;
@model EditModel
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div class="mb-2 text-center text-secondary">
                <i class="fa-solid fa-user-plus fa-6x"></i>
            </div>


            <div class="form-floating mb-2">
                <input asp-for="Username" type="text" class="form-control  input-sm" />
                <label asp-for="Username"></label>
                <span class="text-bg-danger text-danger" asp-validation-for="Username"></span>

            </div>

            <div class="form-floating mb-2">
                <input asp-for="Password" type="password" class="form-control input-sm" />
                <label asp-for="Password"></label>
                <span class="text-bg-danger text-danger" asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Name" type="text" class="form-control input-sm" />
                <label asp-for="Name"></label>
                <span class="text-bg-danger text-danger" asp-validation-for="Name"></span>

            </div>
            <div class="form-floating mb-2">
                <input asp-for="Surname" type="TEXT" class="form-control input-sm" />
                <label asp-for="Surname"></label>
                <span class="text-bg-danger text-danger" asp-validation-for="Surname"></span>

            </div>

            <div class="form-floating mb-2">
                <input class="form-control input-sm" type="date" asp-for="StartDateJob" />
                <label asp-for="StartDateJob"></label>
                <span class="text-bg-danger text-danger" asp-validation-for="StartDateJob"></span>

            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" asp-for="IsBreak" id="Isbreak">
                <label class="form-check-label" for="flexCheckDefault">
                    İşten ayrıldı mı?
                </label>
            </div>
            
            <div class="form-floating mb-2" id="ShowHideMe" style="display:none">
                <input asp-for="EmploymentDate" type="date" class="form-control input-sm employmentdate" />
                <label asp-for="EmploymentDate"></label>
            </div>

            <div class="form-group mb-2">
                <label class="control-label">Bölümü:</label>
                <select class="form-select" asp-items="Model.Departmans" asp-for="SelectedDepartman"></select>
            </div>
            <span class="text-bg-danger text-danger" asp-validation-for="SelectedDepartman"></span>


            <div class="text-center d-flex justify-content-between ">
                <a asp-action="index"  type="submit" class="btn btn-primary">
                    Geri Dön
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-floppy-disk me-2"></i>Güncelle
                </button>
            </div>

            @if (ViewData["done"] != null)
            {
                if ((bool)ViewData["done"] == true)
                {
                    <div class="alert alert-success mt-3">Kullanıcı başarılı bir şekilde Kayıt Edildi</div>
                }
                else
                {
                    <div class="alert alert-danger mt-3">Kullanıcı adı Kullanımda</div>
                }
            }
        </form>
    </div>
</div>